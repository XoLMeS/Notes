<Window x:Class="Notes.Windows.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes.Windows"
        mc:Ignorable="d"
        Title="NoteWindow" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Width="120" Height="26" Click="Button_Click_BtnCancel"/>
        <Button Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="162,233,0,0" VerticalAlignment="Top" Width="120" Height="26" Click="Button_Click_BtnSave"/>
        <TextBox Name="TBText" HorizontalAlignment="Left" Height="172" Margin="10,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" TextChanged="TBText_TextChanged"/>
        <TextBox Name="TBTitle" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" TextChanged="TBTitle_TextChanged"/>

    </Grid>
</Window>
